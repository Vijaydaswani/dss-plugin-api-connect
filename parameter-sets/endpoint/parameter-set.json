{
    "meta" : {
        "label": "Endpoint definition",
        "description": "",
        "icon": "icon-puzzle-piece"
    },
    "defaultDefinableInline": true,
    "defaultDefinableAtProjectLevel": true,

    "pluginParams": [
    ],

    "params": [
        {
            "name": "endpoint_url",
            "label": "URL template",
            "description": "https://service.com/user/{{username}}/details",
            "type": "STRING"
        },
        {
            "name": "endpoint_verb",
            "label": "HTTP method",
            "description": "",
            "type": "SELECT",
            "defaultValue": "GET",
            "selectChoices":[
                {"value": "GET", "label": "GET"},
                {"value": "POST", "label": "POST"},
                {"value": "PUT", "label": "PUT"},
                {"value": "PATCH", "label": "PATCH"},
                {"value": "DELETE", "label": "DELETE"}
            ]
        },
        {
            "name": "endpoint_query_string",
            "label": "Arguments (query string)",
            "description": "",
            "type": "KEY_VALUE_LIST",
            "visibilityCondition": "model.login_type == 'access_token'",
            "defaultValue": [
                {
                    "from": "Authentication",
                    "to": "Bearer {{token}}"
                }
            ]
        },
        {
            "name": "endpoint_query_string",
            "label": "Arguments (query string)",
            "description": "",
            "type": "KEY_VALUE_LIST",
            "visibilityCondition": "model.login_type != 'access_token'"
        },
        {
            "name": "endpoint_body",
            "label": "Body",
            "description": "",
            "type": "KEY_VALUE_LIST",
            "visibilityCondition": false
        },
        {
            "name": "endpoint_headers",
            "label": "Headers",
            "description": "",
            "type": "KEY_VALUE_LIST"
        },
        {
            "type": "SEPARATOR",
            "label": "Data formating"
        },
        {
            "name": "extraction_key",
            "label": "Key to data array",
            "description": "",
            "defaultValue": null,
            "type": "STRING"
        },
        {
            "name": "advanced_settings",
            "label": "Display advanced settings",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "type": "SEPARATOR",
            "label": "Advanced",
            "visibilityCondition": "model.advanced_settings"
        },
        {
            "name": "ignore_ssl_check",
            "label": "Ignore SSL check",
            "type": "BOOLEAN",
            "defaultValue": false,
            "visibilityCondition": "model.advanced_settings"
        },
        {
            "name": "timeout",
            "label": "Timeout (s)",
            "description": "-1 for no limit",
            "type": "INT",
            "defaultValue": 3600,
            "visibilityCondition": "model.advanced_settings"
        },
        {
            "name": "requests_per_minute",
            "label": "Rate limit (requests/m)",
            "description": "-1 for no limit",
            "type": "INT",
            "defaultValue": -1,
            "visibilityCondition": "model.advanced_settings"
        },
        {
            "type": "SEPARATOR",
            "label": "Pagination",
            "visibilityCondition": "model.advanced_settings"
        },
        {
            "name": "pagination_type",
            "label": "Pagination mechanism",
            "description": "Consult the API's documentation",
            "type": "SELECT",
            "defaultValue": "na",
            "visibilityCondition": "model.advanced_settings",
            "selectChoices":[
                {"value": "na", "label": "Not configured"},
                {"value": "next_page", "label": "Next page URL provided"},
                {"value": "offset", "label": "Offset pagination"},
                {"value": "page", "label": "Page pagination"}
            ]
        },
        {
            "name": "next_page_url_key",
            "label": "Key to next request URL",
            "description": "Comma separated key path to next request URL",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.advanced_settings && model.pagination_type=='next_page'"
        },
        {
            "name": "top_key",
            "label": "Key limiting elements per page",
            "description": "",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.advanced_settings && (['page', 'offset'].indexOf(model.pagination_type)>-1)"
        },
        {
            "name": "skip_key",
            "label": "Key for element offset",
            "description": "",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.advanced_settings && model.pagination_type=='offset'"
        },
        {
            "name": "skip_key",
            "label": "Key for page offset",
            "description": "",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.advanced_settings && model.pagination_type=='page'"
        }
    ]
}
